QT       -= gui

TARGET = ndef-decode
CONFIG   += console
CONFIG   -= app_bundle

TEMPLATE = app

INCLUDEPATH += ../include

win32: {
    LIBS += -L../libndef/release/
    LIBS += -lndef1
}

unix: {
    # Link to the library generated by the project.  Could use variables or
    # something here to make it more bulletproof
    LIBS += ../libndef/libndef.dylib

    # Specify that we depend on the library (which, logically would be implicit from
    # the fact that we are linking to it)
    PRE_TARGETDEPS += ../libndef/libndef.dylib
}

SOURCES += ndef-decode.cpp

unix: {
    # install binairies
    isEmpty(PREFIX) {
      PREFIX = /usr/local
    }
    target.path = $$PREFIX/bin
    INSTALLS += target
}

